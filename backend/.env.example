# AskBob.Ai — Backend Environment Variables
# Copy this to .env and fill in your values.

# Anthropic Claude API (for chat responses)
ANTHROPIC_API_KEY=sk-ant-...

# OpenAI API (for embedding questions at query time)
EMBEDDING_API_KEY=sk-proj-...
EMBEDDING_MODEL=text-embedding-3-small

# PostgreSQL + pgvector connection string
DATABASE_URL=postgresql://user:password@host:5432/dbname

# Server
HOST=0.0.0.0
PORT=8000
DEBUG=false

# CORS — comma-separated origins allowed to call the API
# For production, set to your frontend domain(s)
ALLOWED_ORIGINS=http://localhost:8001,http://127.0.0.1:8001

# Rate limiting — max requests per minute per IP
RATE_LIMIT_PER_MINUTE=20

# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO
